<div class="container">
  <h1 class="header"><%= @location.name %></h1>

  <div class="record_container">
    <div>
      <p>Street:
        <%= @address.street%></p>
      <p>City:
        <%= @address.city %></p>
      <p>State:
        <%= @address.state%></p>
      <p>ZIP:
        <%= @address.zip%></p>
    </div>
  </div>
  <br>
  <%= link_to "Edit Location Name", edit_trip_location_path(@location.trip_id, @location, @address) %>
  <%= link_to "Edit Address", edit_location_address_path(@location, @address) %>
  <%= link_to 'New Address', new_location_address_path(@location) %>
  <%= link_to 'Delete Address', [@location, @address], method: :delete %>
</div>

<style>
  .header {
    text-align: center;
    background: #66CCCC;
    color: white;
    padding: 5px;
    border-radius: 8px;
    margin: 0;
    font-family: sans-serif;
  }

  p {
    font-family: sans-serif;
  }
  
  a {
    text-decoration: none; 
    color: white;
    padding: 10px;
    margin: 10px;
    border-radius: 10px;
    background: #66CCCC;
    height: 3.5em;
    width: 5em;
  }
</style>